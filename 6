public class Sıralama {

    public static int[] sortOddsOnly(int[] array) {
      //tek sayı
        List<Integer> oddNumbers = new ArrayList<>();
        for (int num : array) {
            if (num % 2 != 0) {
                oddNumbers.add(num);
            }
        }

        Collections.sort(oddNumbers);

        //yerleştir
        int oddIndex = 0;
        for (int i = 0; i < array.length; i++) {
            if (array[i] % 2 != 0) {
                array[i] = oddNumbers.get(oddIndex);
                oddIndex++;
            }
        }

        return array;
    }
